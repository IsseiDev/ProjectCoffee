<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".TabletActivity"
    android:id="@+id/register"
    android:background="#4b4b4b">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/proj_coffee"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play"
        android:id="@+id/playBtn"
        android:textColor="#ffffff"
        android:background="#1abe1a"
        android:layout_toEndOf="@+id/imageView"
        android:layout_marginLeft="116dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/regList"
        android:layout_alignStart="@+id/regList" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/regList"
        android:layout_toEndOf="@+id/imageView"
        android:background="#9b9b9b"
        tools:listitem="@android:layout/simple_list_item_1"
        android:fastScrollEnabled="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_above="@+id/playBtn" />

</RelativeLayout>
